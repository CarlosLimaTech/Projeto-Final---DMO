<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.edu.ifsp.dmo.syncchat">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SyncChat"
        tools:targetApi="31">

        <!-- Atividade Principal (inicial) -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Atividade de Registro -->
        <activity android:name=".view.RegisterActivity" />

        <!-- Atividade de Conversa -->
        <activity android:name=".view.ConversationActivity" />

        <!-- Atividade de Login -->
        <activity android:name=".view.LoginActivity" />

        <!-- Todas as conversas -->
        <activity android:name=".view.AllConversationsActivity" />

    </application>
</manifest>
